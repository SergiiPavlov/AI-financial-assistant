# База данных (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/voice_finance_db?schema=public"

# Auth secrets (32+ байт)
AUTH_JWT_SECRET="your-jwt-secret"
AUTH_REFRESH_SECRET="your-refresh-secret"

# Cookie/CORS
# CORS_ORIGIN="http://localhost:5173" # если фронт отдельно
# COOKIE_SECURE=false # включайте true в production, false в dev
# ALLOW_BODY_USERID=0

# Ключ для LLM (OpenAI / совместимый) — опционально, понадобится позже
OPENAI_API_KEY="your-openai-api-key-here"
AI_FINANCE_MODEL="gpt-4o-mini"

# Порт сервера
PORT=4001
NODE_ENV=development
